@model IEnumerable<MyView.Models.NightMarket>

@{
    ViewData["Title"] = "各大夜市資料列表";
    Layout = "_LayoutManager";
}

<h1>@ViewData["Title"]</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">新增夜市資料</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                照片
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID)
                @*   編號 *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                @* 夜市名稱 *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
                @* 夜市地址 *@
            </th>
            <th>地圖</th>
            <th>資料管理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@(item.ID).jpg" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a href="https://www.google.com.tw/maps/search/@item.Address" target="_blank" class="btn btn-outline-danger">點我看地圖</a>
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-warning" })

                    @*  @Html.ActionLink("詳細資料", "Details", new { /* id=item.PrimaryKey */ }) | *@
                    <a href="/Home/Details" class="btn btn-info">詳細資料</a>

                    @*   @Html.ActionLink("刪除", "Delete", new { /* id=item.PrimaryKey */ }) *@
                    <a asp-action="Delete" class="btn btn-danger">刪除</a>

                </td>
            </tr>
        }
    </tbody>
</table>
